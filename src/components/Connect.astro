---

<section id="connect" class="section relative overflow-hidden">
  <!-- Background decorations -->
  <div class="absolute inset-0 bg-hero-gradient opacity-30"></div>
  <div class="absolute top-1/4 right-0 w-96 h-96 bg-[var(--color-aura-1)] rounded-full blur-[120px] opacity-50"></div>
  <div class="absolute bottom-0 left-1/4 w-80 h-80 bg-[var(--color-aura-2)] rounded-full blur-[100px] opacity-40"></div>
  
  <div class="container mx-auto relative z-10">
    <!-- Section header -->
    <div class="text-center mb-12" data-animate="fade-up">
      <span class="text-sm font-mono text-[var(--color-accent)] tracking-wider uppercase">Get In Touch</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mt-2 text-[var(--color-text-primary)]">
        Let's Build Something Together
      </h2>
      <p class="text-[var(--color-text-secondary)] mt-4 max-w-xl mx-auto text-lg">
        I'm always open to interesting conversations and collaboration opportunities.
      </p>
    </div>
    
    <!-- Main content grid -->
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 max-w-5xl mx-auto">
      <!-- Left: What I'm open to -->
      <div data-animate="slide-right">
        <div class="card h-full">
          <h3 class="text-xl font-semibold text-[var(--color-text-primary)] mb-6">
            Open to
          </h3>
          <ul class="space-y-4">
            {openTo.map((item, i) => (
              <li class="flex items-start gap-3 text-[var(--color-text-secondary)]">
                <div class="w-6 h-6 rounded-full bg-[var(--color-accent)]/10 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-3.5 h-3.5 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <span>{item}</span>
              </li>
            ))}
          </ul>
          
          <!-- Decorative element -->
          <div class="mt-8 pt-6 border-t border-[var(--color-border)]">
            <p class="text-sm text-[var(--color-text-muted)] italic">
              "Technology should be an equalizer — making quality tools accessible to everyone."
            </p>
          </div>
        </div>
      </div>
      
      <!-- Right: Contact links -->
      <div data-animate="slide-left">
        <div class="space-y-4">
          {contactLinks.map((contact, i) => (
            <a
              href={contact.href}
              target={contact.href.startsWith('http') ? '_blank' : undefined}
              rel={contact.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              class="card flex items-center gap-4 group hover:border-[var(--color-accent)]"
              data-animate="fade-up"
              data-delay={String((i + 1) * 100)}
            >
              <!-- Icon -->
              <div 
                class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0 transition-colors duration-300"
                style={`background-color: ${contact.color}15`}
              >
                <svg 
                  class="w-5 h-5 transition-colors duration-300" 
                  style={`color: ${contact.color}`}
                  fill={contact.isDark ? 'currentColor' : 'none'}
                  stroke={contact.isDark ? 'none' : 'currentColor'}
                  viewBox="0 0 24 24"
                >
                  <Fragment set:html={contact.icon} />
                </svg>
              </div>
              
              <!-- Text -->
              <div class="flex-1 min-w-0">
                <div class="text-sm text-[var(--color-text-muted)]">{contact.label}</div>
                <div class="text-[var(--color-text-primary)] font-medium truncate group-hover:text-[var(--color-accent)] transition-colors">
                  {contact.value}
                </div>
              </div>
              
              <!-- Arrow -->
              <svg 
                class="w-5 h-5 text-[var(--color-text-muted)] group-hover:text-[var(--color-accent)] group-hover:translate-x-1 transition-all duration-300 flex-shrink-0" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
    
    <!-- Footer note -->
    <div class="text-center mt-16" data-animate="fade-up" data-delay="500">
      <div class="aura-line max-w-xs mx-auto mb-6"></div>
      <p class="text-sm text-[var(--color-text-muted)]">
        Based in Hanoi, Vietnam • Available for remote collaboration
      </p>
    </div>
  </div>
</section>

<!-- Footer -->
<footer class="py-8 border-t border-[var(--color-border)] bg-[var(--color-bg-secondary)]">
  <div class="container mx-auto px-4 text-center">
    <p class="text-sm text-[var(--color-text-muted)]">
      © {new Date().getFullYear()} Phạm Phan Anh (Keishi). Built with Astro.
    </p>
  </div>
</footer>


