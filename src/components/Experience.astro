---
const experiences = [
  {
    company: "Samsung R&D Center Vietnam",
    role: "Software Project Leader",
    period: "June 2025 – Present",
    description: "Managing global software release schedules for Samsung PC products",
    highlights: [
      "Technical triage across full stack: BIOS → drivers → OS → applications",
      "First in department to pioneer AI-assisted workflow optimization",
      "Coordinate with worldwide teams across production regions"
    ],
    color: "var(--color-accent)"
  },
  {
    company: "Viettel Aerospace Institute",
    role: "System Engineer",
    period: "May 2024 – Nov 2024",
    description: "Selected for Viettel Digital Talent 2024 — intensive high-performance systems program",
    highlights: [
      "Built Person Search Service: C++ facial recognition processing 4K streams from 50 cameras",
      "Vector embedding pipeline for real-time similarity search",
      "Expertise gained: distributed systems, event-driven architecture"
    ],
    color: "#8b5cf6"
  },
  {
    company: "Sun* Vietnam",
    role: "AI R&D Intern",
    period: "Aug 2023 – Nov 2023",
    description: "Research and development in AI/ML applications",
    highlights: [
      "Fine-tuned SoftVC VITS for Vietnamese singing voice conversion",
      "Built podcast audio dataset for training and evaluation",
      "ML model fine-tuning and Vietnamese NLP"
    ],
    color: "#06b6d4"
  },
  {
    company: "HUST",
    role: "Teaching Assistant — OOP Course",
    period: "Oct 2024 – Dec 2024",
    description: "Supporting Object-Oriented Programming education",
    highlights: [
      "Mentored student projects with continuous feedback",
      "Designed hands-on Git workflow labs"
    ],
    color: "#10b981",
    isSmall: true
  }
];
---

<section id="experience" class="section">
  <div class="container mx-auto">
    <!-- Section header -->
    <div class="text-center mb-16" data-animate="fade-up">
      <span class="text-sm font-mono text-[var(--color-accent)] tracking-wider uppercase">Career</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mt-2 text-[var(--color-text-primary)]">
        Experience
      </h2>
      <p class="text-[var(--color-text-secondary)] mt-4 max-w-xl mx-auto">
        From high-performance systems to global product management
      </p>
    </div>
    
    <!-- Timeline -->
    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-px bg-[var(--color-border)] md:-translate-x-px"></div>
      
      <!-- Experience cards -->
      <div class="space-y-8 md:space-y-12">
        {experiences.map((exp, i) => (
          <div 
            class={`relative flex flex-col md:flex-row gap-4 md:gap-8 ${i % 2 === 0 ? 'md:flex-row-reverse' : ''}`}
            data-animate={i % 2 === 0 ? "slide-left" : "slide-right"}
            data-delay={String(i * 100)}
          >
            <!-- Timeline dot -->
            <div class="absolute left-4 md:left-1/2 w-3 h-3 rounded-full bg-[var(--color-bg-primary)] border-2 -translate-x-1/2 mt-6 md:mt-8 z-10" style={`border-color: ${exp.color}`}>
              <div class="absolute inset-0 rounded-full animate-ping opacity-20" style={`background-color: ${exp.color}`}></div>
            </div>
            
            <!-- Spacer for alignment -->
            <div class="hidden md:block md:w-1/2"></div>
            
            <!-- Card -->
            <div class={`ml-10 md:ml-0 md:w-1/2 ${i % 2 === 0 ? 'md:pr-12' : 'md:pl-12'}`}>
              <div class={`card aura-border ${exp.isSmall ? 'py-4' : ''}`}>
                <!-- Period badge -->
                <div class="flex items-center gap-3 mb-3">
                  <span 
                    class="inline-flex items-center px-2.5 py-1 text-xs font-mono rounded-md"
                    style={`background-color: ${exp.color}15; color: ${exp.color}`}
                  >
                    {exp.period}
                  </span>
                </div>
                
                <!-- Company and role -->
                <h3 class="text-lg md:text-xl font-semibold text-[var(--color-text-primary)]">
                  {exp.company}
                </h3>
                <p class="text-[var(--color-accent)] font-medium mb-2">
                  {exp.role}
                </p>
                
                <!-- Description -->
                <p class="text-sm text-[var(--color-text-secondary)] mb-3">
                  {exp.description}
                </p>
                
                <!-- Highlights -->
                <ul class="space-y-1.5">
                  {exp.highlights.map((highlight) => (
                    <li class="flex items-start gap-2 text-sm text-[var(--color-text-muted)]">
                      <svg class="w-4 h-4 mt-0.5 flex-shrink-0" style={`color: ${exp.color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                      <span>{highlight}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>


