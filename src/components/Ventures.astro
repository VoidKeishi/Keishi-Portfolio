---
const ventures = [
  {
    name: "Leaply",
    tagline: "Vietnam's first AI-powered study abroad platform",
    role: "Co-founder & Technical Lead",
    badge: "AI+X Global 2025",
    badgeColor: "var(--color-accent)",
    description: "Helping Vietnamese students find their right-fit universities through intelligent matching. Making quality study abroad guidance accessible beyond the privileged few.",
    techStack: ["Vector Embeddings", "Cosine Similarity", "LLM Integration", "Multi-dimensional Scoring"],
    features: [
      "AI matching: academic, financial, cultural, career fit",
      "LLM-integrated mentorship features",
      "Scalable architecture for growth"
    ],
    image: "/img/leaply-logo.png",
    accentColor: "var(--color-accent)"
  },
  {
    name: "Stealth Venture",
    tagline: "AI-powered ERP for Vietnamese SMEs",
    role: "Co-founder",
    badge: "Stealth Mode",
    badgeColor: "#8b5cf6",
    description: "Building intelligent enterprise software that brings modern operational capabilities to small and medium businesses. Details intentionally minimal.",
    techStack: ["AI/ML", "Enterprise Architecture", "Cloud Infrastructure"],
    features: [
      "Intelligent automation for SME operations",
      "Vietnamese market focused",
      "Coming soon"
    ],
    image: "/img/erp.png",
    accentColor: "#8b5cf6",
    isStealth: true
  }
];
---

<section id="ventures" class="section bg-[var(--color-bg-secondary)]">
  <div class="container mx-auto">
    <!-- Section header -->
    <div class="text-center mb-16" data-animate="fade-up">
      <span class="text-sm font-mono text-[var(--color-accent)] tracking-wider uppercase">Building</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mt-2 text-[var(--color-text-primary)]">
        Ventures
      </h2>
      <p class="text-[var(--color-text-secondary)] mt-4 max-w-xl mx-auto">
        Turning ideas into products that solve real problems
      </p>
    </div>
    
    <!-- Ventures - Consistent layout for both -->
    <div class="space-y-16 lg:space-y-20">
      {ventures.map((venture, i) => (
        <div 
          class="lg:grid lg:grid-cols-5 lg:gap-12 items-center"
          data-animate="fade-up"
          data-delay={String(i * 150)}
        >
          <!-- Left: Logo/Image -->
          <div class="lg:col-span-2 mb-8 lg:mb-0">
            <div class="flex items-center justify-center">
              <div class="text-center">
                <div class="w-40 h-40 md:w-48 md:h-48 lg:w-44 lg:h-44 xl:w-52 xl:h-52 mx-auto mb-5">
                  <img 
                    src={venture.image}
                    alt={`${venture.name} Logo`}
                    class="w-full h-full object-contain"
                  />
                </div>
                <span class="text-xl md:text-2xl font-semibold text-[var(--color-text-primary)] tracking-tight">{venture.name}</span>
              </div>
            </div>
          </div>
          
          <!-- Right: Content -->
          <div class="lg:col-span-3">
            <div class="card h-full">
              <!-- Badge row -->
              <div class="flex flex-wrap items-center gap-2 mb-4">
                <span 
                  class="inline-flex items-center gap-1.5 px-3 py-1 text-xs font-medium rounded-full border"
                  style={`background-color: ${venture.badgeColor}10; color: ${venture.badgeColor}; border-color: ${venture.badgeColor}30`}
                >
                  {venture.isStealth && (
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                  )}
                  {venture.badge}
                </span>
                <span class="tag">
                  {venture.role}
                </span>
              </div>
              
              <!-- Heading -->
              <h3 class="text-2xl md:text-3xl font-bold text-[var(--color-text-primary)] mb-2">
                {venture.name}
              </h3>
              <p class="text-base md:text-lg mb-4" style={`color: ${venture.accentColor}`}>
                {venture.tagline}
              </p>
              
              <!-- Description -->
              <p class="text-[var(--color-text-secondary)] mb-6">
                {venture.description}
              </p>
              
              <!-- Tech stack -->
              <div class="mb-6">
                <h4 class="text-sm font-semibold text-[var(--color-text-primary)] mb-2">Technical Scope</h4>
                <div class="flex flex-wrap gap-2">
                  {venture.techStack.map((tech) => (
                    <span class="px-3 py-1 text-xs font-mono bg-[var(--color-bg-tertiary)] text-[var(--color-text-muted)] rounded-md border border-[var(--color-border)]">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
              
              <!-- Features -->
              <ul class="space-y-2">
                {venture.features.map((feature) => (
                  <li class="flex items-start gap-2 text-sm text-[var(--color-text-secondary)]">
                    <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style={`color: ${venture.accentColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
              
              {venture.isStealth && (
                <div class="mt-6 flex items-center gap-2 text-sm" style={`color: ${venture.accentColor}`}>
                  <span class="relative flex h-2 w-2">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full opacity-75" style={`background-color: ${venture.accentColor}`}></span>
                    <span class="relative inline-flex rounded-full h-2 w-2" style={`background-color: ${venture.accentColor}`}></span>
                  </span>
                  <span class="font-medium">Stay tuned</span>
                </div>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
