---
const skillCategories = [
  {
    name: "Languages",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />`,
    skills: ["C/C++", "Java", "Python", "TypeScript", "JavaScript", "SQL"],
    color: "var(--color-accent)"
  },
  {
    name: "Frameworks",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />`,
    skills: ["Qt (C++)", "Spring Boot", "Astro", "React"],
    color: "#8b5cf6"
  },
  {
    name: "AI / ML",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />`,
    skills: ["Vector Embeddings", "Similarity Search", "Model Fine-tuning", "Data Pipelines"],
    color: "#06b6d4"
  },
  {
    name: "Infrastructure",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />`,
    skills: ["Docker", "Linux", "Distributed Systems", "Event-driven Architecture"],
    color: "#10b981"
  },
  {
    name: "Process",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />`,
    skills: ["Git", "Jira", "Agile/Scrum", "UML"],
    color: "#f59e0b"
  },
  {
    name: "Working Style",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />`,
    skills: ["AI-Augmented Dev", "Cursor", "Claude Code", "Systems-first Thinking"],
    color: "#ec4899"
  }
];
---

<section id="skills" class="section bg-[var(--color-bg-secondary)]">
  <div class="container mx-auto">
    <!-- Section header -->
    <div class="text-center mb-16" data-animate="fade-up">
      <span class="text-sm font-mono text-[var(--color-accent)] tracking-wider uppercase">Toolkit</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mt-2 text-[var(--color-text-primary)]">
        Skills
      </h2>
      <p class="text-[var(--color-text-secondary)] mt-4 max-w-xl mx-auto">
        Technologies and practices I work with daily
      </p>
    </div>
    
    <!-- Skills grid - bento layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-6 max-w-5xl mx-auto">
      {skillCategories.map((category, i) => (
        <div 
          class={`group ${i === 0 ? 'md:col-span-2 lg:col-span-1' : ''}`}
          data-animate="fade-up"
          data-delay={String(i * 100)}
        >
          <div class="card h-full hover:border-transparent relative overflow-hidden">
            <!-- Hover gradient border effect -->
            <div 
              class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"
              style={`background: linear-gradient(135deg, ${category.color}20, transparent, ${category.color}10)`}
            ></div>
            
            <div class="relative">
              <!-- Category header -->
              <div class="flex items-center gap-3 mb-4">
                <div 
                  class="w-10 h-10 rounded-lg flex items-center justify-center transition-colors duration-300"
                  style={`background-color: ${category.color}15`}
                >
                  <svg 
                    class="w-5 h-5 transition-colors duration-300" 
                    style={`color: ${category.color}`}
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <Fragment set:html={category.icon} />
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-[var(--color-text-primary)]">
                  {category.name}
                </h3>
              </div>
              
              <!-- Skills tags -->
              <div class="flex flex-wrap gap-2">
                {category.skills.map((skill, j) => (
                  <span 
                    class="px-3 py-1.5 text-sm font-medium bg-[var(--color-bg-tertiary)] text-[var(--color-text-secondary)] rounded-lg border border-[var(--color-border)] hover:border-current hover:text-current transition-colors duration-200 cursor-default"
                    style={`--tw-text-opacity: 1; color: var(--color-text-secondary)`}
                    data-color={category.color}
                  >
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Additional note -->
    <div class="text-center mt-12" data-animate="fade-up" data-delay="600">
      <p class="text-sm text-[var(--color-text-muted)] max-w-md mx-auto">
        Pragmatic over perfectionist â€” I choose the right tool for the job, not the trendiest.
      </p>
    </div>
  </div>
</section>

<style>
  /* Skill tag hover effect */
  .card:hover span[data-color] {
    border-color: var(--color-border);
  }
  
  .card span[data-color]:hover {
    border-color: attr(data-color);
    color: attr(data-color);
  }
</style>


