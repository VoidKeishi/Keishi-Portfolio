---
import ThemeToggle from "./ThemeToggle.astro";

interface Props {
  isIsolated?: boolean;
}

const { isIsolated = false } = Astro.props;

// Navigation links - different behavior on home vs isolated pages
const navLinks = [
  { label: "About", href: isIsolated ? "/about" : "#about" },
  { label: "Experience", href: isIsolated ? "/experience" : "#experience" },
  { label: "Ventures", href: isIsolated ? "/ventures" : "#ventures" },
  { label: "Projects", href: isIsolated ? "/projects" : "#projects" },
  { label: "Skills", href: isIsolated ? "/skills" : "#skills" },
  { label: "Connect", href: isIsolated ? "/connect" : "#connect" },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[var(--color-bg-primary)]/80 backdrop-blur-lg border-b border-[var(--color-border)]">
  <nav class="container mx-auto px-4 lg:px-6 h-16 flex items-center justify-between">
    <!-- Logo -->
    <a 
      href="/" 
      class="text-xl font-semibold text-[var(--color-text-primary)] hover:text-[var(--color-accent)] transition-colors"
    >
      Keishi
    </a>
    
    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-1">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="px-3 py-2 text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] transition-colors rounded-lg hover:bg-[var(--color-bg-tertiary)]"
        >
          {link.label}
        </a>
      ))}
      
      <!-- Blog link (external) -->
      <a
        href="#"
        target="_blank"
        rel="noopener noreferrer"
        class="px-3 py-2 text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] transition-colors rounded-lg hover:bg-[var(--color-bg-tertiary)] flex items-center gap-1"
      >
        Blog
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
    
    <!-- Right side: Theme toggle + Mobile menu button -->
    <div class="flex items-center gap-2">
      <ThemeToggle />
      
      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        type="button"
        aria-label="Open menu"
        class="md:hidden w-10 h-10 flex items-center justify-center rounded-lg border border-[var(--color-border)] bg-[var(--color-bg-secondary)] hover:border-[var(--color-accent)] transition-colors"
      >
        <svg class="hamburger-icon w-5 h-5 text-[var(--color-text-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg class="close-icon w-5 h-5 text-[var(--color-text-primary)] hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </nav>
  
  <!-- Mobile Navigation Menu -->
  <div
    id="mobile-menu"
    class="md:hidden hidden absolute top-16 left-0 right-0 bg-[var(--color-bg-primary)]/95 backdrop-blur-lg border-b border-[var(--color-border)] shadow-lg"
  >
    <div class="container mx-auto px-4 py-4 flex flex-col gap-1">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="mobile-nav-link px-4 py-3 text-base font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] hover:bg-[var(--color-bg-tertiary)] rounded-lg transition-colors"
        >
          {link.label}
        </a>
      ))}
      
      <!-- Blog link (external) -->
      <a
        href="#"
        target="_blank"
        rel="noopener noreferrer"
        class="mobile-nav-link px-4 py-3 text-base font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] hover:bg-[var(--color-bg-tertiary)] rounded-lg transition-colors flex items-center gap-2"
      >
        Blog
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</header>

<!-- Spacer to account for fixed navbar -->
<div class="h-16"></div>

<script>
  function initMobileMenu() {
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const hamburgerIcon = menuBtn?.querySelector('.hamburger-icon');
    const closeIcon = menuBtn?.querySelector('.close-icon');
    const mobileLinks = document.querySelectorAll('.mobile-nav-link');
    
    if (!menuBtn || !mobileMenu) return;
    
    let isOpen = false;
    
    function toggleMenu() {
      isOpen = !isOpen;
      mobileMenu.classList.toggle('hidden', !isOpen);
      hamburgerIcon?.classList.toggle('hidden', isOpen);
      closeIcon?.classList.toggle('hidden', !isOpen);
    }
    
    function closeMenu() {
      isOpen = false;
      mobileMenu.classList.add('hidden');
      hamburgerIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
    
    menuBtn.addEventListener('click', toggleMenu);
    
    // Close menu when clicking a link
    mobileLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });
    
    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) {
        closeMenu();
      }
    });
  }
  
  document.addEventListener('DOMContentLoaded', initMobileMenu);
  document.addEventListener('astro:page-load', initMobileMenu);
</script>

