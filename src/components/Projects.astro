---
const projects = [
  {
    name: "Socket Chatter",
    description: "Real-time LAN messaging application with async architecture supporting text, images, and video. Features a responsive QML interface with Qt signal-slot patterns.",
    techStack: ["C++", "Qt", "QML"],
    features: [
      "Async multi-media messaging",
      "Responsive QML interface",
      "Qt signal-slot architecture"
    ],
    github: "https://github.com/VoidKeishi",
    color: "var(--color-accent)"
  },
  {
    name: "TSP-GA",
    description: "Genetic algorithm visualization for the Traveling Salesman Problem. Interactive visualization of the optimization process showing evolution in real-time.",
    techStack: ["Java", "JavaFX"],
    features: [
      "Genetic algorithm implementation",
      "Interactive visualization",
      "Real-time evolution display"
    ],
    github: "https://github.com/VoidKeishi",
    color: "#9a7b4f"
  }
];
---

<section id="projects" class="section paper-texture">
  <div class="container mx-auto">
    <!-- Section header -->
    <div class="text-center mb-16" data-animate="fade-up">
      <span class="text-sm font-mono text-[var(--color-accent)] tracking-wider uppercase">Portfolio</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mt-2 text-[var(--color-text-primary)]">
        Projects
      </h2>
      <p class="text-[var(--color-text-secondary)] mt-4 max-w-xl mx-auto">
        Selected technical work showcasing systems thinking
      </p>
    </div>
    
    <!-- Projects grid -->
    <div class="grid md:grid-cols-2 gap-6 lg:gap-8 max-w-4xl mx-auto">
      {projects.map((project, i) => (
        <div 
          class="group"
          data-animate={i % 2 === 0 ? "slide-right" : "slide-left"}
          data-delay={String(i * 100)}
        >
          <div class="card h-full relative overflow-hidden transition-all duration-300 hover:shadow-lg group-hover:border-[var(--color-accent)]">
            <!-- Gradient accent top -->
            <div 
              class="absolute top-0 left-0 right-0 h-1 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              style={`background: linear-gradient(90deg, ${project.color}, var(--color-accent-light))`}
            ></div>
            
            <!-- Header with icon -->
            <div class="flex items-start justify-between mb-4">
              <div class="w-12 h-12 rounded-lg flex items-center justify-center" style={`background-color: ${project.color}15`}>
                <svg class="w-6 h-6" style={`color: ${project.color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                </svg>
              </div>
              
              <!-- GitHub link -->
              <a 
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-lg border border-[var(--color-border)] flex items-center justify-center text-[var(--color-text-muted)] hover:text-[var(--color-text-primary)] hover:border-[var(--color-accent)] transition-colors"
                aria-label={`View ${project.name} on GitHub`}
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            </div>
            
            <!-- Project name -->
            <h3 class="text-xl font-bold text-[var(--color-text-primary)] mb-2 group-hover:text-[var(--color-accent)] transition-colors">
              {project.name}
            </h3>
            
            <!-- Description -->
            <p class="text-sm text-[var(--color-text-secondary)] mb-4 line-clamp-3">
              {project.description}
            </p>
            
            <!-- Features -->
            <ul class="space-y-1.5 mb-4">
              {project.features.map((feature) => (
                <li class="flex items-center gap-2 text-xs text-[var(--color-text-muted)]">
                  <span class="w-1 h-1 rounded-full" style={`background-color: ${project.color}`}></span>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            
            <!-- Tech stack -->
            <div class="flex flex-wrap gap-2 mt-auto pt-4 border-t border-[var(--color-border)]">
              {project.techStack.map((tech) => (
                <span class="px-2 py-0.5 text-xs font-mono bg-[var(--color-bg-tertiary)] text-[var(--color-text-muted)] rounded">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- View more link -->
    <div class="text-center mt-12" data-animate="fade-up" data-delay="300">
      <a 
        href="https://github.com/VoidKeishi"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-[var(--color-accent)] hover:underline font-medium"
      >
        <span>View more on GitHub</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>



